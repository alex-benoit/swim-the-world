<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Challenges</h1>
    </div>
    <% @challenges.each do |challenge| %>
    <div class="col-xs-6 col-md-4">
      <div class="card">
        <h2><%= link_to challenge.name, challenge_path(id: challenge.id) %></h2>
        <% if challenge.users.find_by_id(current_user.id).nil? %>
          <p><%= link_to 'Participate', challenge_swims_path(challenge_id: challenge.id), method: :post %></p>
        <% else %>
          <p><%= link_to 'Give up', '#' %></p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
